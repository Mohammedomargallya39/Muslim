<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuranSoundActivity"
    android:background="@drawable/background3"
    >


    <Button
        android:id="@+id/quran_sound_btn_elsodis"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="  السديس "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/quran_sound_btn_elmenshawy"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="  محمد المنشاوي "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_above="@id/quran_sound_btn_elsodis"
        />
    <Button
        android:id="@+id/quran_sound_btn_fares"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="   فارس عباد "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_above="@id/quran_sound_btn_elmenshawy"
        />

    <Button
        android:id="@+id/quran_sound_btn_hosary"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_10sdp"
        android:text=" محمود الحصري "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_above="@id/quran_sound_btn_fares"
        />

    <Button
        android:id="@+id/quran_sound_btn_abdelbaset"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="  عبدالباسط "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_alignParentBottom="true"        />

    <Button
        android:id="@+id/quran_sound_btn_elafasy"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="  العفاسي "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_above="@id/quran_sound_btn_abdelbaset"
        />

    <Button
        android:id="@+id/quran_sound_btn_elqatamy"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="  القطامي "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_above="@id/quran_sound_btn_elafasy"

        />

    <Button
        android:id="@+id/quran_sound_btn_maher"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="  المعيقلي "
        android:textColor="#000000"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/btnbackground"
        android:layout_above="@id/quran_sound_btn_elqatamy"
        />




</RelativeLayout>